{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "yt-dlp"
                ]
            }
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "/public/index.html"
        },
        {
            "src": "/youtube",
            "dest": "/public/youtube.html"
        },
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/(.*).(css|js|html|png|jpg|svg|ico)",
            "dest": "/public/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "/public/index.html"
        }
    ]
}